<div class="row">
    <div class="col-md-6 text-center">
        <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" name="firstName" class="form-control" {% if employee is defined %} value="{{ employee.firstName }}" {% endif %}>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" {% if employee is defined %} value="{{ employee.lastName }}" {% endif %}>
        </div>


        <div class="form-group">
            <label for="city">City</label>
            <input type="text" id="city" name="city" class="form-control" {% if employee is defined %} value="{{ employee.city }}" {% endif %}>
        </div>
    </div>
    <div class="col-md-6 text-center">
        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" class="form-control" {% if employee is defined %} value="{{ employee.lastName }}" {% endif %}>
        </div>
        <div class="form-group">
            <label for="street">Street</label>
            <input type="text" id="street" name="street" class="form-control" {% if employee is defined %} value="{{ employee.street }}" {% endif %}>
        </div>
        <div class="form-group">
            <label for="zip">Zip</label>
            <input type="text" id="zip" name="zip" class="form-control" {% if employee is defined %} value="{{ employee.zip }}" {% endif %}>
        </div>
    </div>
</div>