{% extends 'base.html.twig' %}
{% set page = 'employee' %}

{% block body %}
    <section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5"
             style="background-image: url({{ asset('bundles/app/template/images/big_image_1.jpg') }});">
        <div class="container">
            <div class="row align-items-center site-hero-inner justify-content-center">
                <div class="col-md-12 text-center">
                    <div class="mb-5 element-animate">
                        <h1>Employee list</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="site-section">
        <div class="container">
            <div class="row mb-2">
                <div class="col-md-12 text-left">
                    <a class="btn btn-sm btn-primary" href="{{ path('employee_create') }}"><i
                                class="fas fa-plus"></i></a>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="heading-wrap text-center element-animate">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>E-Mail</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for employee in employees %}
                                    <tr>
                                        <td>{{ employee.name }}</td>
                                        <td>{{ employee.address|nl2br }}</td>
                                        <td>{{ employee.email }}</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn-primary btn-sm text-white"
                                                   data-toggle="dropdown" aria-haspopup="true"
                                                   aria-expanded="false"><i class="fas fa-caret-down"></i></button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="{{ path('employee_edit', {'id' : employee.id }) }}"><i
                                                                class="fas fa-edit"></i> Edit</a>
                                                    <a class="dropdown-item"
                                                       href="{{ path('employee_delete', {'id' : employee.id}) }}"><i
                                                                class="fas fa-trash text-danger"></i> Delete</a>
                                                </div>

                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- END section -->

    <!-- loader -->
    <div id="loader" class="show fullscreen">
        <svg class="circular" width="48px" height="48px">
            <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/>
            <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10"
                    stroke="#f4b214"/>
        </svg>
    </div>
{% endblock %}